<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".arrivals_c"
    android:id="@+id/drawerlayout_c"
    android:fitsSystemWindows="true"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            layout="@layout/toolbar2"/>


        <EditText
            android:id="@+id/arrivtypetxtc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/txt"

            android:layout_marginTop="41dp"
            android:hint="Type"
            android:textColor="@color/textboxcolor"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@+id/arrivspinnerc"
            tools:layout_editor_absoluteX="0dp" />
        "/>

        <EditText
            android:id="@+id/arrivquantitytxtc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:theme="@style/txt"
            android:hint="quantity"
            android:textColor="@color/textboxcolor"
            android:textSize="10dp"
            app:layout_constraintTop_toBottomOf="@+id/arrivtypetxtc"
            tools:layout_editor_absoluteX="-16dp" />

        <EditText
            android:id="@+id/arrivtimetxtc"
            android:layout_width="181dp"
            android:layout_height="33dp"
            android:layout_marginTop="60dp"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
            android:hint="Time"
            android:inputType="datetime"
            android:longClickable="false"
            android:textColor="@color/textboxcolor"
            android:textSize="10dp"
            android:theme="@style/txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/arrivquantitytxtc" />

        <EditText
            android:id="@+id/arrivdatetxtc"
            android:layout_width="181dp"
            android:layout_height="33dp"
            android:layout_marginBottom="49dp"
            android:clickable="true"
            android:editable="false"
            android:focusable="false"
            android:hint="date"
            android:inputType="datetime"
            android:longClickable="false"
            android:textColor="@color/textboxcolor"
            android:textSize="10dp"
            android:theme="@style/txt"
            app:layout_constraintBottom_toTopOf="@+id/arrividtxtc"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/arrividtxtc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:hint="Id"
            android:textColor="@color/textboxcolor"
            android:textSize="10dp"
            android:theme="@style/txt"
            app:layout_constraintTop_toBottomOf="@+id/arrivtimetxtc"
            tools:layout_editor_absoluteX="0dp" />

        <Spinner
            android:id="@+id/arrivspinnerc"
            android:theme="@style/txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:textColor="@color/textboxcolor"
            android:textSize="10dp"


            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="0dp" />

        <android.support.design.widget.FloatingActionButton

            android:id="@+id/arrivfloatbtnc"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="28dp"
            android:layout_marginBottom="32dp"
            android:background="@color/green"
            android:foregroundGravity="bottom"
            android:src="@drawable/message"
            android:theme="@style/floatb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_viewc"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_head"
        app:menu="@menu/drawer_c"
        />

</android.support.v4.widget.DrawerLayout>